<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// Place global declarations here.
// Timing parameters (constants)

//VVI

const int LRL = 1000;      // LRL - Lower rate limit, 60 bpm
const int URL = 500;       // 120 bpm
const int VRP = 320;       // ms

// Pulse characteristics (can abstract away)
const int V_AMPLITUDE = 3500;     // 3.5V (mV)
const int V_PULSE_WIDTH = 400;    // 0.4ms (Âµs)
const int V_SENSITIVITY = 2500;   // 2.5mV

// Communication channels
chan v_sense;
chan v_pace;</declaration>
	<template>
		<name>VVI_Controller</name>
		<declaration>//Models the pacemaker controller that monitors and paces the ventricle.
clock lrl_timer;   // Tracks time for LRL
clock vrp_timer;   // Tracks time in VRP</declaration>
		<location id="id0" x="-8" y="-136">
			<name x="17" y="-144">Idle</name>
			<label kind="invariant" x="-25" y="-195">lrl_timer &lt;= LRL</label>
		</location>
		<location id="id1" x="76" y="0">
			<name x="68" y="-34">VRP_State</name>
		</location>
		<location id="id2" x="-8" y="153">
			<name x="17" y="145">Pacing</name>
		</location>
		<init ref="id0"/>
		<transition id="id3">
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="assignment" x="42" y="93">vrp_timer := 0</label>
		</transition>
		<transition id="id4">
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="guard" x="-144" y="-42">vrp_timer &gt;= VRP</label>
			<nail x="-8" y="-59"/>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id1"/>
			<label kind="guard" x="170" y="-17">vrp_timer &lt; VRP</label>
			<label kind="synchronisation" x="169" y="8">v_sense?</label>
			<nail x="152" y="-17"/>
			<nail x="152" y="34"/>
		</transition>
		<transition id="id6">
			<source ref="id0"/>
			<target ref="id2"/>
			<label kind="guard" x="-374" y="-153">lrl_timer == LRL</label>
			<label kind="synchronisation" x="-374" y="-128">v_pace!</label>
			<label kind="assignment" x="-374" y="-102">lrl_timer := 0,
vrp_timer := 0</label>
			<nail x="-323" y="0"/>
		</transition>
		<transition id="id7">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="68" y="-127">v_sense?</label>
			<label kind="assignment" x="68" y="-102">lrl_timer := 0, 
vrp_timer := 0</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">RandomHeart</name>
		<declaration>//Models the heart's ventricle behavior with random beating patterns.
clock heart_timer;

// Heart can beat anywhere in this range
const int MIN_HEART_INTERVAL = 300;   // Very fast (200 bpm)
const int MAX_HEART_INTERVAL = 2000;  // Very slow (30 bpm)</declaration>
		<location id="id8" x="0" y="-306">
			<name x="-34" y="-348">Waiting</name>
			<label kind="invariant" x="-144" y="-391">heart_timer &lt;= MAX_HEART_INTERVAL</label>
		</location>
		<location id="id9" x="0" y="-17">
			<name x="25" y="-25">Beating</name>
			<committed/>
		</location>
		<init ref="id8"/>
		<transition id="id10">
			<source ref="id9"/>
			<target ref="id8"/>
			<label kind="comments" x="-119" y="17">allows time to pass</label>
			<nail x="-103" y="0"/>
		</transition>
		<transition id="id11">
			<source ref="id8"/>
			<target ref="id8"/>
			<label kind="synchronisation" x="-289" y="-365">v_pace?</label>
			<label kind="assignment" x="-365" y="-340">heart_timer := 0</label>
			<nail x="-195" y="-297"/>
			<nail x="-195" y="-374"/>
		</transition>
		<transition id="id12">
			<source ref="id8"/>
			<target ref="id8"/>
			<label kind="guard" x="127" y="-348">heart_timer &gt;= MIN_HEART_INTERVAL</label>
			<label kind="synchronisation" x="136" y="-323">v_sense!</label>
			<label kind="assignment" x="136" y="-297">heart_timer := 0</label>
			<nail x="102" y="-348"/>
			<nail x="102" y="-255"/>
		</transition>
		<transition id="id13">
			<source ref="id9"/>
			<target ref="id8"/>
			<label kind="synchronisation" x="-229" y="-161">v_sense!</label>
			<label kind="comments" x="-391" y="-102">Return to resting "waiting" phase</label>
			<nail x="-144" y="-153"/>
		</transition>
		<transition id="id14">
			<source ref="id8"/>
			<target ref="id9"/>
			<label kind="synchronisation" x="-357" y="-212">v_pace?</label>
			<label kind="assignment" x="-433" y="-187">heart_timer := 0</label>
			<label kind="comments" x="-510" y="-246">Response to pacing from pacemaker</label>
			<nail x="-450" y="-85"/>
		</transition>
		<transition id="id15">
			<source ref="id8"/>
			<target ref="id9"/>
			<label kind="guard" x="17" y="-187">heart_timer &gt;= MIN_HEART_INTERVAL</label>
			<label kind="synchronisation" x="17" y="-161">v_sense!</label>
			<label kind="assignment" x="17" y="-144">heart_timer := 0</label>
			<label kind="comments" x="17" y="-102">Heart naturally decides to beat</label>
		</transition>
	</template>
	<system>// System declarations
system VVI_Controller, RandomHeart;
</system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
		</query>
		<query>
			<formula>E&lt;&gt; deadlock</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-12 14:25:34 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A&lt;&gt; RandomHeart.Waiting</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-12 13:04:09 -0500">
			</result>
		</query>
		<query>
			<formula>RandomHeart.Waiting --&gt; (RandomHeart.Waiting || VVI_Controller.Pacing)</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-12 13:04:42 -0500">
			</result>
		</query>
		<query>
			<formula>A[] (VVI_Controller.VRP_State imply not VVI_Controller.Pacing)
</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-12 14:43:09 -0500">
			</result>
		</query>
		<query>
			<formula>E&lt;&gt; VVI_Controller.VRP_State
</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-12 14:57:58 -0500">
			</result>
		</query>
		<query>
			<formula>A[] (VVI_Controller.lrl_timer &lt;= LRL)</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="failure" type="quality" timestamp="2025-11-12 15:18:26 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula/>
			<comment/>
		</query>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
