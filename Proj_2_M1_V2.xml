<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// Place global declarations here.
// Timing parameters (constants)

//VVI

const int LRL = 1000;      // LRL - Lower rate limit, 60 bpm
const int URL = 180;       //W
const int VRP = 150;       // ms

const int HRI = LRL + 200;  // Hysteresis Rate Interval (HRI &gt; LRI)
int RI = LRL;          // current “active” lower rate interval

// Communication channels
urgent chan sense;   // heart → pacemaker (must be handled immediately when enabled)
chan pace;           // pacemaker → heart

//to allow for verification of queries
bool last_pace  = false;
bool last_sense = false;

// Bounds on heart’s intrinsic beat interval (IBI)
const int minIBI = 400;   // 
const int maxIBI = 1200;  // </declaration>
	<template>
		<name>Pacemaker</name>
		<declaration>//Models the pacemaker controller that monitors and paces the ventricle.
clock xv;</declaration>
		<location id="id0" x="-306" y="0">
			<name x="-391" y="-8">WaitVRP</name>
			<label kind="invariant" x="-391" y="-42">xv &lt;= VRP</label>
		</location>
		<location id="id1" x="68" y="0">
			<name x="51" y="17">WaitRI</name>
			<label kind="invariant" x="51" y="34">xv &lt;= LRL</label>
		</location>
		<location id="id2" x="365" y="0">
			<name x="382" y="-8">SenseReady</name>
			<label kind="invariant" x="382" y="17">xv &lt;= LRL</label>
		</location>
		<location id="id3" x="-119" y="-170">
			<name x="-170" y="-204">PaceEvent</name>
			<committed/>
		</location>
		<location id="id4" x="-119" y="170">
			<name x="-161" y="187">SenseEvent</name>
			<committed/>
		</location>
		<init ref="id1"/>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id3"/>
			<label kind="guard" x="-136" y="-127">xv &gt;= LRL</label>
			<label kind="synchronisation" x="-136" y="-144">pace!</label>
			<label kind="assignment" x="-136" y="-110">last_pace = true,
last_sense = false,
RI = LRL</label>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="144" y="0">xv &gt;= URL</label>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id4"/>
			<label kind="synchronisation" x="144" y="85">sense?</label>
			<label kind="assignment" x="93" y="110">last_pace = false,
last_sense = true,
RI = HRI</label>
		</transition>
		<transition id="id8">
			<source ref="id2"/>
			<target ref="id3"/>
			<label kind="guard" x="68" y="-212">xv &gt;= LRL</label>
			<label kind="synchronisation" x="68" y="-195">pace!</label>
			<label kind="assignment" x="68" y="-170">last_pace = true,
last_sense = false,
RI = LRL</label>
		</transition>
		<transition id="id9">
			<source ref="id3"/>
			<target ref="id0"/>
			<label kind="assignment" x="-255" y="-119">xv = 0,
last_pace = false</label>
		</transition>
		<transition id="id10">
			<source ref="id4"/>
			<target ref="id0"/>
			<label kind="assignment" x="-340" y="93">xv = 0,
last_sense = false</label>
		</transition>
		<transition id="id11">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-161" y="0">xv &gt;= VRP</label>
			<label kind="assignment" x="-161" y="17">xv = 0</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Heart</name>
		<declaration>//Models the heart's ventricle behavior with random beating patterns.
clock xh; // heart clock: time since last intrinsic or paced beat

</declaration>
		<location id="id12" x="0" y="-280">
			<name x="25" y="-306">Resting</name>
			<label kind="invariant" x="25" y="-323">xh &lt;= minIBI</label>
		</location>
		<location id="id13" x="-170" y="-170">
			<name x="-204" y="-153">PacedEvent</name>
			<committed/>
		</location>
		<location id="id14" x="-170" y="-391">
			<name x="-212" y="-433">SenseEvent</name>
			<committed/>
		</location>
		<location id="id15" x="-289" y="-323">
			<name x="-408" y="-340">SenseReady</name>
			<label kind="invariant" x="-425" y="-314">xh &lt;= maxIBI</label>
		</location>
		<init ref="id12"/>
		<transition id="id16">
			<source ref="id13"/>
			<target ref="id12"/>
			<label kind="assignment" x="0" y="-212">xh = 0</label>
			<nail x="-25" y="-195"/>
		</transition>
		<transition id="id17">
			<source ref="id15"/>
			<target ref="id13"/>
			<label kind="synchronisation" x="-314" y="-263">pace?</label>
		</transition>
		<transition id="id18">
			<source ref="id12"/>
			<target ref="id15"/>
			<label kind="guard" x="-204" y="-289">xh &gt;= minIBI</label>
		</transition>
		<transition id="id19">
			<source ref="id15"/>
			<target ref="id14"/>
			<label kind="synchronisation" x="-374" y="-433">sense!</label>
		</transition>
		<transition id="id20">
			<source ref="id14"/>
			<target ref="id12"/>
			<label kind="assignment" x="-93" y="-391">xh = 0</label>
		</transition>
	</template>
	<system>// System declarations
system Pacemaker, Heart;
</system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:17 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] Pacemaker.WaitVRP imply Pacemaker.xv &lt;= VRP</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:17 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] (Pacemaker.xv &gt; VRP) imply !Pacemaker.WaitVRP</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:17 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] Pacemaker.xv &lt;= LRL</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:17 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] last_sense imply Pacemaker.xv &gt;= URL</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:17 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_pace imply Pacemaker.xv &gt;= VRP</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:17 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_sense imply RI == HRI</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:18 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_pace imply RI == LRL</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:18 -0500">
			</result>
		</query>
		<query>
			<formula>A[] Heart.xh &lt;= maxIBI</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-14 21:04:18 -0500">
			</result>
		</query>
		<query>
			<formula>A[] Heart.SenseReady imply (Heart.xh &gt;= minIBI &amp;&amp; Heart.xh &lt;= maxIBI)</formula>
			<comment>Heart in SenseReady state has valid clock range for sensing</comment>
		</query>
		<query>
			<formula>E&lt;&gt; last_sense</formula>
			<comment>There exists a path where sense eventually happens</comment>
		</query>
	</queries>
</nta>
