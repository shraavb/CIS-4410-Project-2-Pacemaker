<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// Place global declarations here.
// Timing parameters (constants)

//VVI

const int LRL = 1500;      // LRL - Lower rate limit, 60 bpm
const int URL = 333;       //W
const int VRP = 150;       // ms

const int HRI = LRL + 200;  // Hysteresis Rate Interval (HRI &gt; LRI)
int RI = LRL;          // current “active” lower rate interval

// Communication channels
urgent chan sense;   // heart → pacemaker (must be handled immediately when enabled)
chan pace;           // pacemaker → heart

//to allow for verification of queries
bool last_pace  = false;
bool last_sense = false;

// Bounds on heart’s intrinsic beat interval (IBI)
const int minIBI = 400;   // 
const int maxIBI = 1200;  // </declaration>
	<template>
		<name>Pacemaker</name>
		<declaration>//Models the pacemaker controller that monitors and paces the ventricle.
clock xv;</declaration>
		<location id="id0" x="-535" y="-51">
			<name x="-620" y="-59">WaitVRP</name>
			<label kind="invariant" x="-620" y="-93">xv &lt;= VRP</label>
		</location>
		<location id="id1" x="365" y="0">
			<name x="382" y="-8">SenseReady</name>
			<label kind="invariant" x="382" y="17">xv &lt;= LRL</label>
		</location>
		<location id="id2" x="-119" y="-170">
			<name x="-170" y="-204">PaceEvent</name>
			<committed/>
		</location>
		<location id="id3" x="-119" y="170">
			<name x="-161" y="187">SenseEvent</name>
			<committed/>
		</location>
		<init ref="id1"/>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-229" y="-85">xv &gt;= VRP</label>
			<label kind="assignment" x="-221" y="-68">xv = 0</label>
			<nail x="-127" y="-42"/>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="144" y="85">sense?</label>
			<label kind="assignment" x="93" y="110">last_pace = false,
last_sense = true,
RI = HRI</label>
		</transition>
		<transition id="id6">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="guard" x="68" y="-212">xv &gt;= LRL</label>
			<label kind="synchronisation" x="68" y="-195">pace!</label>
			<label kind="assignment" x="68" y="-170">last_pace = true,
last_sense = false,
RI = LRL</label>
		</transition>
		<transition id="id7">
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="assignment" x="-501" y="-161">xv = 0,
last_pace = false</label>
		</transition>
		<transition id="id8">
			<source ref="id3"/>
			<target ref="id0"/>
			<label kind="assignment" x="-433" y="93">xv = 0,
last_sense = false</label>
		</transition>
	</template>
	<template>
		<name x="5" y="5">Heart</name>
		<declaration>//Models the heart's ventricle behavior with random beating patterns.
clock xh; // heart clock: time since last intrinsic or paced beat

</declaration>
		<location id="id9" x="-8" y="-289">
			<name x="17" y="-315">Resting</name>
			<label kind="invariant" x="17" y="-348">xh &lt;= minIBI</label>
		</location>
		<location id="id10" x="-170" y="-170">
			<name x="-204" y="-153">PacedEvent</name>
			<committed/>
		</location>
		<location id="id11" x="-170" y="-391">
			<name x="-212" y="-433">SenseEvent</name>
			<committed/>
		</location>
		<location id="id12" x="-289" y="-323">
			<name x="-408" y="-340">SenseReady</name>
			<label kind="invariant" x="-425" y="-314">xh &lt;= maxIBI</label>
		</location>
		<init ref="id9"/>
		<transition id="id13">
			<source ref="id10"/>
			<target ref="id9"/>
			<label kind="assignment" x="0" y="-212">xh = 0</label>
			<nail x="-25" y="-195"/>
		</transition>
		<transition id="id14">
			<source ref="id12"/>
			<target ref="id10"/>
			<label kind="synchronisation" x="-314" y="-263">pace?</label>
		</transition>
		<transition id="id15">
			<source ref="id9"/>
			<target ref="id12"/>
			<label kind="guard" x="-204" y="-289">xh &gt;= minIBI</label>
		</transition>
		<transition id="id16">
			<source ref="id12"/>
			<target ref="id11"/>
			<label kind="synchronisation" x="-374" y="-433">sense!</label>
		</transition>
		<transition id="id17">
			<source ref="id11"/>
			<target ref="id9"/>
			<label kind="assignment" x="-102" y="-408">xh = 0</label>
		</transition>
	</template>
	<system>// System declarations
system Pacemaker, Heart;
</system>
	<queries>
		<query>
			<formula>A[] not deadlock</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-24 22:57:42 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] Pacemaker.WaitVRP imply Pacemaker.xv &lt;= VRP</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-24 22:57:42 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] (Pacemaker.xv &gt; VRP) imply !Pacemaker.WaitVRP</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-24 22:57:42 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] Pacemaker.xv &lt;= LRL</formula>
			<comment/>
			<option key="--diagnostic" value="0"/>
			<result outcome="success" type="quality" timestamp="2025-11-24 22:57:42 -0500">
				<option key="--diagnostic" value="0"/>
			</result>
		</query>
		<query>
			<formula>A[] last_pace imply Pacemaker.xv &gt;= VRP</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-24 22:57:42 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_sense imply RI == HRI</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-24 22:57:42 -0500">
			</result>
		</query>
		<query>
			<formula>A[] last_pace imply RI == LRL</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-24 22:57:42 -0500">
			</result>
		</query>
		<query>
			<formula>A[] Heart.xh &lt;= maxIBI</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2025-11-24 22:57:42 -0500">
			</result>
		</query>
	</queries>
</nta>
